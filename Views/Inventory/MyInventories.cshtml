@model InventoryManagement.ViewModels.MyInventoriesViewModel
@{
    ViewData["Title"] = "My Inventories";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Inventories</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Create New Inventory
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Owned Inventories -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Inventories I Own</h5>
        </div>
        <div class="card-body">
            @if (Model.OwnedInventories.Any())
            {
                <div class="row">
                    @foreach (var inventory in Model.OwnedInventories)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                {
                                    <img src="@inventory.ImageUrl" class="card-img-top" alt="@inventory.Title" style="height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        <i class="fas fa-boxes fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@inventory.Title</h5>
                                    <p class="card-text text-muted">@inventory.Description</p>
                                    <div class="mb-2">
                                        @if (!string.IsNullOrEmpty(inventory.CategoryName))
                                        {
                                            <span class="badge bg-info">@inventory.CategoryName</span>
                                        }
                                        @foreach (var tag in inventory.Tags)
                                        {
                                            <span class="badge bg-secondary me-1">@tag</span>
                                        }
                                    </div>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-box me-1"></i>@inventory.ItemCount items
                                            <br />
                                            <i class="fas fa-clock me-1"></i>Updated @inventory.UpdatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-outline-primary btn-sm">View</a>
                                    <a href="#" class="btn btn-outline-secondary btn-sm">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5>No inventories yet</h5>
                    <p class="text-muted">Get started by creating your first inventory.</p>
                    <a asp-action="Create" class="btn btn-primary">Create Inventory</a>
                </div>
            }
        </div>
    </div>

    <!-- Accessible Inventories -->
    @if (Model.AccessibleInventories.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Inventories Shared With Me</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var inventory in Model.AccessibleInventories)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                {
                                    <img src="@inventory.ImageUrl" class="card-img-top" alt="@inventory.Title" style="height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        <i class="fas fa-boxes fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@inventory.Title</h5>
                                    <p class="card-text text-muted">@inventory.Description</p>
                                    <div class="mb-2">
                                        @if (!string.IsNullOrEmpty(inventory.CategoryName))
                                        {
                                            <span class="badge bg-info">@inventory.CategoryName</span>
                                        }
                                        @foreach (var tag in inventory.Tags)
                                        {
                                            <span class="badge bg-secondary me-1">@tag</span>
                                        }
                                    </div>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-box me-1"></i>@inventory.ItemCount items
                                            <br />
                                            <i class="fas fa-user me-1"></i>By @inventory.CreatorName
                                            <br />
                                            <i class="fas fa-clock me-1"></i>Updated @inventory.UpdatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-outline-primary btn-sm">View</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>