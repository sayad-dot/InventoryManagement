@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="card-title mb-0">Access Denied</h4>
            </div>
            <div class="card-body">
                <i class="fas fa-ban fa-4x text-danger mb-3"></i>
                <h5>You don't have permission to access this resource.</h5>
                <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>