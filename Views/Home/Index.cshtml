@model InventoryManagement.ViewModels.HomeViewModel
@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="p-5 mb-4 bg-light rounded-3 hero-section">
                <div class="container-fluid py-5">
                    <h1 class="display-5 fw-bold hero-title">@Localizer["Welcome"]</h1>
                    <p class="col-md-8 fs-4 hero-text">A comprehensive solution for managing custom inventories with advanced features like custom ID formats, real-time collaboration, and powerful search.</p>
                    <button class="btn btn-primary btn-lg" type="button">@Localizer["ViewAll"]</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">@Localizer["TotalInventories"]</h5>
                            <h2 class="mb-0">15</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">@Localizer["TotalItems"]</h5>
                            <h2 class="mb-0">658</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cube fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">@Localizer["ActiveUsers"]</h5>
                            <h2 class="mb-0">24</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">@Localizer["Categories"]</h5>
                            <h2 class="mb-0">8</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Latest Inventories Table -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@Localizer["LatestInventories"]</h5>
                    <span class="badge bg-light text-primary">@Model.LatestInventories.Count</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["MyInventories"]</th>
                                    <th>@Localizer["Creator"]</th>
                                    <th>@Localizer["Items"]</th>
                                    <th>@Localizer["Created"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inventory in Model.LatestInventories)
                                {
                                    <tr style="cursor: pointer;" onclick="window.location='#'">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-box text-white"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">@inventory.Title</h6>
                                                    <small class="text-muted">@inventory.Description</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <small>@inventory.Creator.FullName</small>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge bg-info rounded-pill">@inventory.ItemCount</span>
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted">@inventory.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <a href="#" class="btn btn-outline-primary btn-sm">View All Inventories</a>
                </div>
            </div>
        </div>

        <!-- Popular Inventories Table -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Most Popular Inventories</h5>
                    <span class="badge bg-light text-success">Top 5</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Inventory</th>
                                    <th>Creator</th>
                                    <th>Items</th>
                                    <th>Activity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inventory in Model.PopularInventories)
                                {
                                    <tr style="cursor: pointer;" onclick="window.location='#'">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <div class="bg-success rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-star text-white"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">@inventory.Title</h6>
                                                    <small class="text-muted">@inventory.Description</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <small>@inventory.Creator.FullName</small>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge bg-success rounded-pill">@inventory.ItemCount</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="progress" style="height: 6px; width: 80px;">
                                                <div class="progress-bar bg-success" style="width: @(inventory.ItemCount % 100)%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tag Cloud -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">Explore by Tags</h5>
                </div>
                <div class="card-body">
                    <div class="tag-cloud text-center">
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-light text-dark border me-2 mb-2 p-2 tag-item">@tag</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .tag-cloud .tag-item {
        font-size: 0.9em;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    .tag-cloud .tag-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        background-color: #007bff !important;
        color: white !important;
    }
    .card {
        border: none;
        border-radius: 10px;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
</style>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">