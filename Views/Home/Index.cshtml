@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Welcome to Inventory Manager</h1>
    <p class="lead">Your complete solution for managing inventories and items.</p>
    
    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Latest Inventories</h5>
                    <p class="card-text">Table of latest inventories will appear here.</p>
                    <div class="text-muted">(Coming soon)</div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Popular Inventories</h5>
                    <p class="card-text">Top 5 most popular inventories will appear here.</p>
                    <div class="text-muted">(Coming soon)</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tag Cloud</h5>
                <div class="text-muted">Tag cloud will appear here soon.</div>
            </div>
        </div>
    </div>
</div>
