@model InventoryManagement.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Search";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-search me-2"></i>Search Inventory Manager
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" id="searchForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-md-8">
                                <input asp-for="Query" class="form-control form-control-lg" 
                                       placeholder="Enter search terms..." 
                                       id="searchInput" />
                                <span asp-validation-for="Query" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <select asp-for="SearchType" class="form-select form-select-lg">
                                    <option value="all">Everything</option>
                                    <option value="inventories">Inventories</option>
                                    <option value="items">Items</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-search me-1"></i>Search
                                </button>
                            </div>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Query))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5>Search Results for "@Model.Query"</h5>
                            <small class="text-muted">@Model.TotalResults results found</small>
                        </div>

                        @if (Model.Results.Any())
                        {
                            <div class="search-results">
                                @foreach (var result in Model.Results)
                                {
                                    <div class="card mb-3 search-result-item">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <span class="badge @(result.Type == "inventory" ? "bg-primary" : "bg-success") me-2">
                                                            @(result.Type == "inventory" ? "Inventory" : "Item")
                                                        </span>
                                                        <h5 class="card-title mb-0">
                                                            <a href="@result.Url" class="text-decoration-none">@result.Title</a>
                                                        </h5>
                                                    </div>
                                                    
                                                    @if (!string.IsNullOrEmpty(result.Description))
                                                    {
                                                        <p class="card-text text-muted mb-2">@result.Description</p>
                                                    }
                                                    
                                                    @if (!string.IsNullOrEmpty(result.Highlight))
                                                    {
                                                        <div class="search-highlight mb-2">
                                                            <small class="text-success">@Html.Raw(result.Highlight)</small>
                                                        </div>
                                                    }
                                                    
                                                    <div class="search-meta text-muted">
                                                        <small>
                                                            <i class="fas fa-user me-1"></i>@result.CreatorName
                                                            <i class="fas fa-clock ms-2 me-1"></i>@result.CreatedAt.ToString("MMM dd, yyyy")
                                                            @if (result.Type == "item")
                                                            {
                                                                <i class="fas fa-archive ms-2 me-1"></i>@result.InventoryTitle
                                                            }
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="text-end">
                                                    <small class="text-muted">Relevance: @result.Relevance.ToString("F1")</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Pagination -->
                            @if (Model.TotalResults > Model.PageSize)
                            {
                                <nav aria-label="Search results pagination">
                                    <ul class="pagination justify-content-center">
                                        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalResults / Model.PageSize); i++)
                                        {
                                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                                <button type="submit" form="searchForm" name="Page" value="@i" class="page-link">@i</button>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h5>No results found</h5>
                                <p class="text-muted">Try different search terms or check the spelling.</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h5>What are you looking for?</h5>
                            <p class="text-muted">Enter search terms above to find inventories and items.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            
            // Focus on search input
            searchInput.focus();
            
            // Quick search on Enter (without form submission for quick preview)
            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    document.getElementById('searchForm').submit();
                }
            });
        });
    </script>
    
    <style>
        .search-result-item {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
        .search-result-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-left-color: #007bff;
        }
        .search-highlight mark {
            background-color: #fff3cd;
            padding: 0.1em 0.2em;
            border-radius: 0.2em;
        }
    </style>
}